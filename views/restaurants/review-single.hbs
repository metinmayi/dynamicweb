<div class="main">
  <div class="restaurant-container">
    <div class="title-wrap">
      <h2>{{name}}</h2>
      <div class="avarageRating-container">
        <p>{{averageRating}}</p>
      </div>
    </div>
    <div class="image-wrap">
      <img src="{{imageUrl}}" alt="Picture of an awesome restaurant" />
    </div>
    <div class="description-wrap">
      <p>{{description}}</p>
    </div>
    <div class="creator-wrap">
      <p><b>Made by: </b>{{creator}}</p>
    </div>
  </div>
  <div class="comments-container">
    <div class="comment-wrap">
      <div class="comments-item">
        {{#if comments}}
          <p><b>Comments:</b></p>
        {{/if}}
        {{#each comments}}
          <p>{{username}}: {{comment}}</p>
        {{/each}}
      </div>
    </div>
    <div class="create-wrap">
      {{#if sameUser}}
        <label for="delete">Delete Restaurant</label>
        <form action="/restaurants/delete/{{_id}}" method="post">
          <input type="submit" value="Delete" />
        </form>

        <label for="edit">Edit Restaurant</label>

        <p class="error">{{error}}</p>

        <form action="/restaurants/edit/{{_id}}" method="post">
          <input type="file" name="image" id="image" />
          <input type="text" name="name" placeholder="Name of Restaurant" />
          <input type="text" name="description" placeholder="Description" />
          <input type="submit" value="Confirm" />
        </form>
      {{else}}
        {{#if differentUser}}
          <label for="comment">Comment and rate</label>

          <p class="error">{{error}}</p>

          <form action="/restaurants/comment/{{_id}}" method="post">
            <input type="text" name="comment" placeholder="Add a comment..." />
            <input type="submit" value="Confirm" />
          </form>

          <form action="/restaurants/rate/{{_id}}" method="post">
            <select name="rating">
              <option value="Rating" disabled selected>Rate restaurant</option>
              <option value="1">&#9733;</option>
              <option value="2">&#9733; &#9733;</option>
              <option value="3">&#9733; &#9733; &#9733;</option>
              <option value="4">&#9733; &#9733; &#9733; &#9733;</option>
              <option value="5">&#9733; &#9733; &#9733; &#9733; &#9733;</option>
            </select>
            <input type="submit" value="Confirm" />
          </form>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>